#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config window_origin_display        default
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_shadow                off
yabai -m config window_opacity               off

# yabai -m config window_opacity_duration      1.0
# yabai -m config active_window_opacity        1.0

yabai -m config normal_window_opacity        0.9

yabai -m config window_border                on
yabai -m config window_border_radius         0
yabai -m config window_border_width          2
yabai -m config active_window_border_color   0xff3e5ea3
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f

yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off

yabai -m config mouse_modifier               ctrl
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap


# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  15
yabai -m config bottom_padding               0
yabai -m config left_padding                 0
yabai -m config right_padding                0
yabai -m config window_gap                   2

# check how many spaces are active up to 9, if not then make it
active_num=$(yabai -m query --spaces | jq -re '. | length')
space_names=("home" "web" "term" "discord" "text" "spotify" "mail" "utils" "misc")
for ((i=$active_num+1; i<=9; i++)); do
  $(yabai -m space --create && yabai -m space $i --label ${space_names[$i]})
done

yabai -m space 1 --label home
yabai -m space 2 --label web
yabai -m space 3 --label term
yabai -m space 4 --label discord
yabai -m space 5 --label text
yabai -m space 6 --label spotify
yabai -m space 7 --label mail
yabai -m space 8 --label utils
yabai -m space 9 --label misc
yabai -m space 10 --label ableton

# window rules
yabai -m rule --add app="^Brave Browser$" space=web
yabai -m rule --add app="^qutebrowser$" space=web
yabai -m rule --add app="^iTerm$" space=term
yabai -m rule --add app="^Spotify$" space=spotify
yabai -m rule --add app="^Discord$" space=discord
yabai -m rule --add app="^System Preferences$" manage=off space=utils
yabai -m rule --add app="^Ableton Live 11 Standard$" manage=off space=ableton

yabai -m config --space misc layout        float
yabai -m config --space home layout        float

echo "yabai configuration loaded.."

# IGNORE THESE APPS
yabai -m rule --add label="Finder" app="^Finder$" manage=off layer=normal
yabai -m rule --add label="App Store" app="^App Store$" manage=off layer=normal
yabai -m rule --add label="Spotify" app="^Spotify$" manage=off layer=normal

# refresh my Übersicht bar when the space changes
yabai -m signal --add event=space_changed \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"ubersicht-polybar-widget-left-bar-coffee\"'"

echo "yabai configuration loaded.."
