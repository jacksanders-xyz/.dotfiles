# delete window then close space
ctrl + alt - q : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close) && \
       yabai -m query --spaces | jq -re 'map(select(."is-visible"==true))' && \
       yabai -m space --destroy && \
       /Users/_jacksanders/polybar-refresh.sh


