shift + cmd + alt - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# focus window
# alt - h : yabai -m window --focus west
cmd + ctrl - h : yabai -m window --focus west
cmd + ctrl - l : yabai -m window --focus east
cmd + ctrl - k : yabai -m window --focus north
cmd + ctrl - j : yabai -m window --focus south


# move window
shift + ctrl - h : chunkc tiling::window --warp west
shift + ctrl - j : chunkc tiling::window --warp south
shift + ctrl - k : chunkc tiling::window --warp north
shift + ctrl - l : chunkc tiling::window --warp east

## Close active application
shift + cmd - r : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)

## send window to monitor and follow focus
shift + cmd + ctrl - l : /Users/jsanders/yabScripts/moveWindowLeftAndFollowFocus.sh
shift + cmd + ctrl - h : /Users/jsanders/yabScripts/moveWindowRightAndFollowFocus.sh

